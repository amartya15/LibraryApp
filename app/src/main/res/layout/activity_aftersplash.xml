<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout4"
    android:background="@drawable/gradient_list"
    tools:context=".Aftersplash">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME TO YOUR OWN MARKET"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/textview"
        android:textStyle="bold"
        android:autoSizeMaxTextSize="30dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE CHOOSE YOUR LOGIN OPTION"
        android:layout_below="@id/textview"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:textSize="25dp"
        android:id="@+id/loginoption"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/admin"
        android:layout_width="95dp"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42dp"
        android:src="@drawable/admin"

        />

    <ImageView
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="55dp"
        android:src="@drawable/user"
        android:id="@+id/user"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:layout_above="@id/admin"
        android:layout_marginLeft="60dp"
        android:id="@+id/admintext"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:layout_above="@id/user"
        android:layout_marginLeft="239dp"
        android:textStyle="bold"
        android:id="@+id/usertext"

        />

    <Button
        android:id="@+id/buttonadminhn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="3dp"
        android:onClick="click"
        android:text="click" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:text="click"
      android:layout_marginLeft="230dp"
        android:id="@+id/buttonuser"
        android:onClick="clicktouser"
        android:layout_marginTop="3dp"
        />



</RelativeLayout>